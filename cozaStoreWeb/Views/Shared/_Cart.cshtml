@model List<cozaStoreWeb.Models.CartItem>
<div class="wrap-header-cart js-panel-cart">
    <div class="s-full js-hide-cart"></div>


    @if (Model.Count > 0)
    {
        <div class="header-cart flex-col-l p-l-65 p-r-25">
            <div class="header-cart-title flex-w flex-sb-m p-b-8">
                <span class="mtext-103 cl2">
                    Giỏ hàng
                </span>

                <div class="fs-35 lh-10 cl2 p-lr-5 pointer hov-cl1 trans-04 js-hide-cart">
                    <i class="zmdi zmdi-close"></i>
                </div>
            </div>

            <div class="header-cart-content flex-w js-pscroll">
                <ul class="header-cart-wrapitem w-full">
                    @if (Model == null)
                    {

                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            <li class="header-cart-item flex-w flex-t m-b-12">
                                <a href="@Url.Action("Delete1","Cart", new { id = item.Product.ProductID})">
                                    <div class="header-cart-item-img">
                                        @{ string ImagePath = "~/wwwroot/images/" + item.Product.Image;
                                            string a = ImagePath;}
                                        <img src="@Url.Content(ImagePath)" alt="IMG">
                                    </div>
                                </a>

                                <div class="header-cart-item-txt p-t-8">
                                    <a href="#" class="header-cart-item-name m-b-18 hov-cl1 trans-04">
                                        @item.Product.ProductName
                                    </a>

                                    <span class="header-cart-item-info">
                                        @item.Quantity x @item.Product.Price.ToString("#,###") vnđ
                                    </span>
                                </div>
                            </li>
                        }
                    }

                </ul>

                <div class="w-full">
                    <div class="header-cart-total w-full p-tb-40">
                        @{
                            decimal sum = 0;
                            if (Model == null)
                            {
                                sum = 0;
                            }
                            else
                            {
                                foreach (var item1 in Model)
                                {
                                    sum += (decimal)(item1.Quantity * item1.Product.Price);
                                }
                            }
                        }
                        Tổng tiền: @sum.ToString("#,###") vnđ
                    </div>

                    <div class="header-cart-buttons flex-w w-full">
                        <a href="@Url.Action("Index", "Cart")" class="flex-c-m stext-101 cl0 size-107 bg3 bor2 hov-btn3 p-lr-15 trans-04 m-b-10">
                            Thanh Toán
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {

        <div class="header-cart flex-col-l p-l-65 p-r-25" style="height: 100%;">
            <div class="text-center" style="padding-top: 150px;">
                <img width="100%" class="" src="~/wwwroot/images/icons/empty_cart.png" alt="Anh" />
            </div>
            <div class="text-center" style="padding:40px;">
                <p>Giỏ hàng của bạn còn trống!</p>
                <button onclick="location.href = '@Url.Action("Index","Home")'" type="button" class="btn btn-danger">Mua ngay</button>
            </div>
        </div>
    }
</div>
