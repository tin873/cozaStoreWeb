@model cozaStoreWeb.Models.Product
@{
    ViewBag.Title = "ProductDetails";
    string ImagePath = "~/wwwroot/images/" + Model.Image;
}

<!-- Product Detail -->
<section class="sec-product-detail bg0 p-t-65 p-b-60">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-lg-7 p-b-30">
                <div class="p-l-25 p-r-30 p-lr-0-lg">
                    <div class="wrap-slick3 flex-sb flex-w">
                        <div class="slick3 gallery-lb">
                            <div class="item-slick3" data-thumb="@Url.Content(ImagePath)">
                                <div class="wrap-pic-w pos-relative">
                                    <img src="@Url.Content(ImagePath)" alt="IMG-PRODUCT">

                                    <a class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04" href="@Url.Content(ImagePath)">
                                        <i class="fa fa-expand"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-5 p-b-30">
                <div class="p-r-50 p-t-5 p-lr-0-lg">
                    <h4 class="mtext-105 cl2 js-name-detail p-b-14">
                        @Model.ProductName
                    </h4>

                    <span class="mtext-106 cl2">
                        @Model.Price.ToString("#,###") vnđ
                    </span>


                    @if (Session["UserID"] != null)
                    {
                        <form method="post" action="/Cart/AddItem">
                            <!--  -->
                            <div class="p-t-33">
                                <div class="flex-w flex-r-m p-b-10">
                                    <div class="size-203 flex-c-m respon6">
                                        Size
                                    </div>
                                    <div class="size-204 respon6-next">
                                        @{ Html.RenderAction("_Size", "Home");}
                                    </div>
                                </div>

                                <div class="flex-w flex-r-m p-b-10">
                                    <div class="size-203 flex-c-m respon6">
                                        Color
                                    </div>

                                    <div class="size-204 respon6-next">
                                        @{ Html.RenderAction("_Color", "Home");}
                                    </div>
                                </div>
                            </div>
                            <input type="text" value="@Model.ProductID" name="productID" style="display: none;">
                            <div class="flex-w flex-r-m p-b-10">
                                <div class="size-204 flex-w flex-m respon6-next">
                                    <div class="wrap-num-product flex-w m-r-20 m-tb-10">
                                        <div class="btn-num-product-down cl8 hov-btn3 trans-04 flex-c-m">
                                            <i class="fs-16 zmdi zmdi-minus"></i>
                                        </div>

                                        <input class="mtext-104 cl3 txt-center num-product" type="number" name="quantity" value="1">

                                        <div class="btn-num-product-up cl8 hov-btn3 trans-04 flex-c-m">
                                            <i class="fs-16 zmdi zmdi-plus"></i>
                                        </div>
                                    </div>
                                    <button class="flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04 js-addcart-detail" type="submit">
                                        Thêm vào giỏ
                                    </button>

                                </div>
                            </div>
                        </form>
                    }
                    else
                    {

                        <!--  -->
                        <div class="p-t-33">
                            <div class="flex-w flex-r-m p-b-10">
                                <div class="size-203 flex-c-m respon6">
                                    Size
                                </div>
                                <div class="size-204 respon6-next">
                                    @{ Html.RenderAction("_Size", "Home");}
                                </div>
                            </div>

                            <div class="flex-w flex-r-m p-b-10">
                                <div class="size-203 flex-c-m respon6">
                                    Color
                                </div>

                                <div class="size-204 respon6-next">
                                    @{ Html.RenderAction("_Color", "Home");}
                                </div>
                            </div>
                        </div>
                        <input type="text" value="@Model.ProductID" name="productID" style="display: none;">
                        <div class="flex-w flex-r-m p-b-10">
                            <div class="size-204 flex-w flex-m respon6-next">
                                <div class="wrap-num-product flex-w m-r-20 m-tb-10">
                                    <div class="btn-num-product-down cl8 hov-btn3 trans-04 flex-c-m">
                                        <i class="fs-16 zmdi zmdi-minus"></i>
                                    </div>

                                    <input class="mtext-104 cl3 txt-center num-product" type="number" name="quantity" value="1">

                                    <div class="btn-num-product-up cl8 hov-btn3 trans-04 flex-c-m">
                                        <i class="fs-16 zmdi zmdi-plus"></i>
                                    </div>
                                </div>
                                <button onclick="location.href = '@Url.Action("Login","Home")'" class="flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04 console-log" type="submit">
                                    Thêm vào giỏ
                                </button>

                            </div>
                        </div>
                    }


                </div>

                <!--  -->
            </div>
        </div>
    </div>

    <div class="bor10 m-t-50 p-t-43 p-b-40">
        <!-- Tab01 -->
        <div class="tab01">
            <!-- Nav tabs -->
            <ul class="nav nav-tabs" role="tablist">
                <li class="nav-item p-b-10" style="font-family:  Montserrat-Regular !important;">
                    <a class="nav-link active" data-toggle="tab" href="#description" role="tab">Mô tả</a>
                </li>
                <li class="nav-item p-b-10">
                    <a class="nav-link" data-toggle="tab" href="#reviews" role="tab">Bình luận</a>
                </li>
            </ul>

            <!-- Tab panes -->
            <div class="tab-content p-t-43">
                <!-- - -->
                <div class="tab-pane fade show active" id="description" role="tabpanel">
                    <div class="how-pos2 p-lr-15-md">
                        <p class="stext-102 cl6" style="font-family:  Montserrat-Regular !important;">
                            @Model.Description
                        </p>
                    </div>
                </div>
                <!-- -->
                <!-- - -->
                <div class="tab-pane fade" id="reviews" role="tabpanel">
                    <div class="row">
                        <div class="col-sm-10 col-md-8 col-lg-6 m-lr-auto">
                            <div class="p-b-30 m-lr-15-sm">
                                <!-- Review -->
                                @foreach (var item in Model.Comments)
                                {
                                    <div class="flex-w flex-t p-b-68" style="padding-bottom:20px;">
                                        <div class="size-207" style="background-color:lightgray; padding-left:20px;">
                                            <div class="flex-w flex-sb-m p-b-17">
                                                <span class="mtext-107 cl2 p-r-20" style="padding-top:10px;">
                                                    <strong>@item.NameUser</strong>
                                                </span>
                                            </div>
                                            <p class="stext-102 cl6" style="color:black; padding-bottom: 10px;">
                                                @item.Content
                                            </p>
                                        </div>
                                    </div>
                                }

                                <!-- Add review -->
                                <form class="w-full" action="/Home/_Comment" method="post">
                                    <input type="text" name="ProductID" />
                                    <h5 class="mtext-108 cl2 p-b-7">
                                        Thêm comment
                                    </h5>

                                    <p class="stext-102 cl6">
                                        Địa chỉ email của bạn sẽ không được công bố. Các trường bắt buộc được đánh dấu *
                                    </p>


                                    <div class="row p-b-25">
                                        <div class="col-12 p-b-5">
                                            <label class="stext-102 cl3" for="review">Nội dung</label>
                                            <textarea class="size-110 bor8 stext-102 cl2 p-lr-20 p-tb-10" id="review" name="review" required></textarea>
                                        </div>

                                        <div class="col-sm-6 p-b-5">
                                            <label class="stext-102 cl3" for="name">Tên</label>
                                            <input class="size-111 bor8 stext-102 cl2 p-lr-20" id="name" type="text" name="name" required>
                                            <input class="size-111 bor8 stext-102 cl2 p-lr-20" id="productID" type="text" name="productID" value="@Model.ProductID" style="display:none;">
                                        </div>

                                        <div class="col-sm-6 p-b-5">
                                            <label class="stext-102 cl3" for="email">Email</label>
                                            <input class="size-111 bor8 stext-102 cl2 p-lr-20" id="email" type="text" name="email" required>
                                        </div>
                                    </div>
                                    
                                    <button class="flex-c-m stext-101 cl0 size-112 bg7 bor11 hov-btn3 p-lr-15 trans-04 m-b-10" type="submit">
                                        Xác nhận
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>

                    @*@{ Html.RenderAction("_Comment", "Home", new { ids = Model.ProductID});}*@
                </div>
            </div>
        </div>
    </div>

</section>


<!-- Related Products -->
@{ Html.RenderAction("_RelatedProducts", "Home", new { id = Model.CategoryID });}

