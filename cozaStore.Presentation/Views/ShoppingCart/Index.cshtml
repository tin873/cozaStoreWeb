@model List<CartItem>
@{
    ViewBag.Title = "Giỏ hàng";
}
<head>
    <style>
        .how-itemcart1 {
            width: 80%;
            position: relative;
            margin-right: 20px;
            cursor: pointer;
        }
    </style>
</head>
<!-- Shoping Cart -->
@if (Model.Count > 0)
{
    <form class="bg0 p-t-75 p-b-85" style="padding-top: 100px;">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-xl-12 m-lr-auto m-b-50">
                    <div class="m-l-25 m-r--38 m-lr-0-xl">
                        <div class="wrap-table-shopping-cart">
                            <table class="table-shopping-cart">
                                <tr class="table_head">
                                    <th class="column-1" style="width: 20%; text-align:center;">Hình ảnh</th>
                                    <th class="column-1" style="width: 20%; text-align:center;">Tên sản phẩm</th>
                                    <th class="column-1" style="width: 20%; text-align:center;">Đơn giá</th>
                                    <th class="column-1" style="width: 20%; text-align:center;">Số lượng</th>
                                    <th class="column-1" style="width: 20%; text-align:center;">Tổng giá sản phẩm</th>
                                </tr>

                                @foreach (var item in Model)
                                {
                                    <tr class="table_row">
                                        <td class="column-1" style="width: 20%; text-align:center;">
                                            <a class="removeproduct" data-id="@item.Product.ProductID">
                                                <div class="how-itemcart1">
                                                    <img src="~/wwwroot/images/@item.Product.Image" alt="IMG">
                                                </div>
                                            </a>
                                        </td>
                                        <td class="column-1" style="width: 20%; text-align:center;">@item.Product.ProductName</td>
                                        <td class="column-1" style="width: 20%; text-align:center;">@item.Product.Price.ToString("#,###")đ</td>
                                        <td class="column-1" style="width: 20%; text-align:center;">
                                            <div class="wrap-num-product flex-w m-l-auto m-r-0">
                                                <a class="decrproduct fs-16 zmdi zmdi-minus btn-num-product-down cl8 hov-btn3 trans-04 flex-c-m" data-id="@item.Product.ProductID">

                                                </a>

                                                <input class="mtext-104 cl3 txt-center num-product qty@(item.Product.ProductID)" type="number" name="num-product1" value="@item.Quantity">
                                                @if (item.Quantity == item.QuantityReal)
                                                {
                                                    <button class=" fs-16 zmdi zmdi-plus btn-num-product-up cl8 hov-btn3 trans-04 flex-c-m" disabled onclick="func()">
                                                    </button>
                                                }
                                                else
                                                {
                                                    <a class="incrproduct fs-16 zmdi zmdi-plus btn-num-product-up cl8 hov-btn3 trans-04 flex-c-m" data-id="@item.Product.ProductID">
                                                    </a>
                                                }
                                            </div>
                                        </td>
                                        <td class="column-1 total@(item.Product.ProductID)" style="width: 20%; text-align:center;">@item.Total.ToString("#,###")đ</td>
                                    </tr>
                                }
                                <tr>
                                    <td class="column-1" style="width: 20%; text-align:center; font-size: 20px; padding: 40px;"><strong>Tổng hóa đơn:</strong></td>
                                    <td class="column-1 grandtotal" style="width: 20%; text-align:center; font-size: 20px; padding: 40px;"><span>@ViewBag.GrandTotal đ</span></td>
                                    <td class="column-1" style="width: 20%; text-align:center;"></td>
                                    <td class="column-1" style="width: 20%; text-align:center;"></td>
                                    <td class="column-1" style="width: 20%; text-align:center;"></td>
                                </tr>
                            </table>
                        </div>

                        <div class="flex-w flex-sb-m bor15 p-t-18 p-b-15 p-lr-40 p-lr-15-sm">

                            @if (Session["userId"] != null)
                            {
                                <a href="@Url.Action("Index", "CheckOut")">
                                    <div class="flex-c-m stext-101 cl2 size-119 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer m-tb-10">
                                        Thanh Toán
                                    </div>
                                </a>
                            }
                            else
                            {
                                <a href="@Url.Action("Login","Home")">
                                    <div class="flex-c-m stext-101 cl2 size-119 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer m-tb-10">
                                        Đăng nhập để thanh toán
                                    </div>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
}
else
{
    <div class="container" style="height: 100%;">
        <div class="text-center" style="padding-top: 150px;">
            <img class="" src="~/wwwroot/images/icons/empty_cart.png" alt="Anh" />
        </div>
        <div class="text-center" style="padding:40px;">
            <p>Giỏ hàng của bạn còn trống!</p>
            <button onclick="location.href = '@Url.Action("Index","Home")'" type="button" class="btn btn-danger">Mua ngay</button>
        </div>
    </div>
}


@section Scripts {
    <script>


        $(function () {

            /*
            * Increment product
            */

            $("a.incrproduct").click(function (e) {
                e.preventDefault();

                var productId = $(this).data("id");
                var url = "/ShoppingCart/IncrementProduct";

                $.getJSON(url, { productId: productId }, function (data) {

                    $("input.qty" + productId).html(data.qty);

                    var price = data.qty * data.price;
                    var priceHtml = price.toFixed(0)+"đ";

                    $("td.total" + productId).html(priceHtml);

                    var gt = parseInt($("td.grandtotal").text());
                    var grandtotal = (gt + data.price).toFixed(0)+"đ";

                    $("td.grandtotal span").text(grandtotal);
                    location.reload();
                }).done(function (data) {
                    var url2 = "/ShoppingCart/PaypalPartial";

                    $.get(url2, {}, function (data) {
                        $('div.paypaldiv').html(data);
                    });
                });
            });

            /*
            * Decrement product
            */

            $("a.decrproduct").click(function (e) {
                e.preventDefault();

                var $this = $(this);
                var productId = $(this).data("id");
                var url = "/ShoppingCart/DecrementProduct";

                $.getJSON(url, { productId: productId }, function (data) {
                    if (data.qty == 0) {
                        $this.parent().parent().fadeOut("fast", function () {
                            location.reload();
                        });
                    }
                    else {
                        $("input.qty" + productId).html(data.qty);

                        var price = data.qty * data.price;
                        var priceHtml = price.toFixed(0)+"đ";

                        $("td.total" + productId).html(priceHtml);

                        var gt = parseFloat($("td.grandtotal span").text());
                        var grandtotal = (gt - data.price).toFixed(0)+"đ";

                        $("td.grandtotal span").text(grandtotal);
                        location.reload();
                    }

                }).done(function (data) {
                    var url2 = "/ShoppingCart/PaypalPartial";

                    $.get(url2, {}, function (data) {
                        $('div .paypaldiv').html(data);
                    });
                });
            });

            /*
            * Remove product
            */

            $(".removeproduct").click(function (e) {
                e.preventDefault();

                var $this = $(this);
                var productId = $(this).data("id");
                var url = "/ShoppingCart/RemoveProduct";

                $.get(url, { productId: productId }, function (data) {
                    location.reload();
                });
            });

            //////////////////////////////////////////////////////////////

            /*
            * Place order
            */

            $(".placeorder").click(function (e) {
                e.preventDefault();

                var $this = $(this);

                var url = "/ShoppingCart/PlaceOrder";

                $(".ajaxbg").show();

                $.post(url, {}, function (data) {
                    $(".ajaxbg span").text("Thank you. You will now be redirected to paypal.");
                    setTimeout(function () {
                        $('form input[name="submit"]').click();
                    }, 2000);
                });
            });

            //////////////////////////////////////////////////////////////

        });

    </script>

}
