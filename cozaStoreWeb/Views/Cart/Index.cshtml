@model List<cozaStoreWeb.Models.CartItem>
@{
    ViewBag.Title = "Features";
}
@section jsFooter{
    <script src="~/wwwroot/js/CartController.js"></script>
}

@if (Model.Count > 0)
{
    <!-- Shoping Cart -->
    <div class="bg0 p-t-75 p-b-85" style="padding-top:135px;">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 col-xl-7 m-lr-auto m-b-50">
                    <div class="m-l-25 m-r--38 m-lr-0-xl">
                        <div class="wrap-table-shopping-cart">

                            <table class="table-shopping-cart">
                                <tr class="table_head">
                                    <th class="column-1">Hình ảnh</th>
                                    <th class="column-1">Tên</th>
                                    <th class="column-1">Đơn giá</th>
                                    <th class="column-1">Số lượng</th>
                                    <th class="column-1">Tổng giá</th>
                                </tr>

                                @foreach (var item in Model)
                                {
                                    <tr class="table_row">
                                        <td class="column-1">
                                            <a href="@Url.Action("Delete","Cart", new { id = item.Product.ProductID})">
                                                <div class="how-itemcart1">
                                                    @{ string ImagePath = "~/wwwroot/images/" + item.Product.Image;
                                                        string a = ImagePath;}
                                                    <img src="@Url.Content(ImagePath)" alt="IMG">
                                                </div>
                                            </a>
                                        </td>
                                        <td class="column-1">@item.Product.ProductName</td>
                                        <td class="column-1">@item.Product.Price.ToString("#,###") vnđ</td>
                                        <td class="column-1" style="padding-left: 0px;">
                                            <div class="wrap-num-product flex-w m-l-auto m-r-0">
                                                <div class="btn-num-product-down cl8 hov-btn3 trans-04 flex-c-m">
                                                    <i class="fs-16 zmdi zmdi-minus" style="font-size: 12px;"></i>
                                                </div>

                                                <input class="mtext-104 cl3 txt-center num-product txtquantity" data-id="@item.Product.ProductID" type="number" name="quantity" value="@item.Quantity">
                                                <div class="btn-num-product-up cl8 hov-btn3 trans-04 flex-c-m">
                                                    <i class="fs-10 zmdi zmdi-plus" style="font-size: 12px;"></i>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="column-1">@((item.Product.Price*item.Quantity).ToString("#,###")) vnđ</td>
                                    </tr>
                                }
                            </table>
                        </div>
                        <!--button-->
                        <div class="flex-w flex-sb-m bor15 p-t-18 p-b-15 p-lr-40 p-lr-15-sm">

                            <div>
                                <button onclick="location.href = '@Url.Action("Products", "Home")'" class="flex-c-m stext-101 cl2 size-119 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer m-tb-10">Tiếp tục mua hàng</button>
                            </div>
                            <div>
                                <button id="btnUpdate" class="flex-c-m stext-101 cl2 size-119 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer m-tb-10">Cật nhật giỏ hàng</button>
                            </div>
                        </div>

                    </div>
                </div>

                <div class="col-sm-10 col-lg-7 col-xl-5 m-lr-auto m-b-50">
                    <form action="/Cart/Index" method="post">
                        <div class="bor10 p-lr-40 p-t-30 p-b-40 m-l-63 m-r-40 m-lr-0-xl p-lr-15-sm">
                            <h4 class="mtext-109 cl2 p-b-30">
                                Tổng tiền đơn đặt hàng
                            </h4>
                            @{
                                string names = "";
                                decimal sum = 0;
                                if (Model == null)
                                {
                                    sum = 0;
                                }
                                else
                                {
                                    foreach (var item1 in Model)
                                    {
                                        sum += (decimal)(item1.Quantity * item1.Product.Price);
                                        names = item1.User.FullName;
                                    }
                                }
                            }
                            <div class="flex-w flex-t bor12 p-b-13">
                                <div class="size-208">
                                    <span class="stext-110 cl2">
                                        Tổng tiền:
                                    </span>
                                </div>

                                <div class="size-209">
                                    <span class="mtext-110 cl2">
                                        @sum.ToString("#,###") vnđ
                                    </span>
                                </div>
                            </div>

                            <div class="flex-w flex-t bor12 p-t-15 p-b-30">
                                <div class="size-208 w-full-ssm">
                                    <div>
                                        <span class="stext-110 cl2">
                                            Vận chuyển:
                                        </span>
                                    </div>

                                </div>

                                <div class="size-209 p-r-18 p-r-0-sm w-full-ssm">
                                    <p class="stext-111 cl6 p-t-2">
                                        Không có phương thức vận chuyển nào có sẵn. Vui lòng kiểm tra kỹ địa chỉ của bạn, hoặc liên hệ với chúng tôi nếu bạn cần bất kỳ trợ giúp nào.
                                    </p>
                                    <div class="p-t-15">
                                        <span class="stext-112 cl8">
                                            Thông tin chuyển hàng:
                                        </span>


                                        <div class="bor8 bg0 m-b-12">
                                            <label style="padding-left:15px; font-size:12px;">Tên:</label>
                                            <input class="stext-111 cl8 plh3 size-111 p-lr-15" type="text" name="name" value="@Session["fullName"]" readonly ="readonly">
                                        </div>
                                        <div class="bor8 bg0 m-b-12">
                                            <label style="padding-left:15px; font-size:12px;">Địa chỉ:</label>
                                            <input class="stext-111 cl8 plh3 size-111 p-lr-15" type="text" name="address" value="@Session["address"]">
                                        </div>

                                        <div class="bor8 bg0 m-b-22">
                                            <label style="padding-left:15px; font-size:12px;">Số điện thoại:</label>
                                            <input class="stext-111 cl8 plh3 size-111 p-lr-15" type="text" name="phone" value="@Session["phone"]">
                                        </div>
                                    </div>

                                </div>

                            </div>

                            <div class="flex-w flex-t p-t-27 p-b-33">
                                <div class="size-208">
                                    <span class="mtext-101 cl2">
                                        Tổng hóa đơn:
                                    </span>
                                </div>

                                <div class="size-209 p-t-1">
                                    <span class="mtext-110 cl2">
                                        @sum.ToString("#,###") vnđ
                                    </span>
                                </div>
                            </div>

                            <button type="submit" class="flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer js-Order-detail">
                                Thanh toán
                            </button>
                        </div>

                    </form>
                </div>

            </div>
        </div>
    </div>
}
else
{
    <div class="container" style="height: 100%;">
        <div class="text-center" style="padding-top: 150px;">
            <img class="" src="~/wwwroot/images/icons/empty_cart.png" alt="Anh" />
        </div>
        <div class="text-center" style="padding:40px;">
            <p>Giỏ hàng của bạn còn trống!</p>
            <button onclick="location.href = '@Url.Action("Index","Home")'" type="button" class="btn btn-danger">Mua ngay</button>
        </div>
    </div>
}


